{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "tests/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  }
}